{
	"name" : "hguenot/html-builder",
	"type" : "library",
	"description" : "Tiny PHP HTML Builder Library",
	"license" : "AGPL-3.0",
	"require" : {
		"php" : ">=7.1",
		"hguenot/data-tree" : ">=v1.0.0"
	}, 
	"require-dev" : {
		"phpunit/phpunit" : "~6.3"
	},
	"autoload" : {
		"psr-4" : {
			"TS\\Text\\HtmlBuilder\\" : "src/"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"TS\\Text\\HtmlBuilder\\Tests\\" : "tests/"
		}
	},
	"scripts" : {
		"test" : "phpunit --coverage-clover=coverage.xml --log-junit=test-report.xml",
		"codecov" : "codecov -t \"a6bf0f00-3286-48bc-bd9c-b4c434c6458b\" -f \"coverage.xml\""
	}
}